// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  agency   Agency? @relation(fields: [agencyId], references: [id])
  agencyId String?
  leads    Lead[]
  rfps     RFP[]

  @@map("users")
}

model Agency {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users User[]
  leads Lead[]
  rfps  RFP[]

  @@map("agencies")
}

model Lead {
  id          String       @id @default(cuid())
  jobNumber   String       @unique
  fullName    String
  email       String
  phone       String?
  company     String?
  industry    Industry
  location    Json         // Stored as JSON for flexibility
  dateWindow  Json?        // Stored as JSON for flexibility
  budgetBand  BudgetBand?
  mustHaveShots String?
  referral    String?
  agreeToTerms Boolean
  source      String       @default("public_form")
  status      LeadStatus   @default(NEW)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  user   User?  @relation(fields: [userId], references: [id])
  userId String?
  agency Agency? @relation(fields: [agencyId], references: [id])
  agencyId String?

  @@map("leads")
}

model RFP {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      RFPStatus @default(DRAFT)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user   User?  @relation(fields: [userId], references: [id])
  userId String?
  agency Agency? @relation(fields: [agencyId], references: [id])
  agencyId String?

  @@map("rfps")
}

enum Role {
  USER
  ADMIN
  AGENCY_ADMIN
}

enum Industry {
  REAL_ESTATE
  CONSTRUCTION
  EVENTS
  MARKETING
  OTHER
}

enum BudgetBand {
  UNDER_500
  FIVE_HUNDRED_1000
  THOUSAND_2500
  TWENTY_FIVE_HUNDRED_PLUS
}

enum LeadStatus {
  NEW
  CONTACTED
  PROPOSAL_SENT
  CONVERTED
  LOST
}

enum RFPStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
}

